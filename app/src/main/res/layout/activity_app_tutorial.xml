<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="affinity.com.srisabaries.ui.activities.AppTutorialActivity">

	<LinearLayout
		android:id="@+id/ll_pager_indicator"
		android:layout_width="30dp"
		android:layout_height="200dp"
		android:layout_alignParentRight="true"
		android:layout_margin="@dimen/d_mar_normal_10dp"
		android:background="@color/c_gray_text"
		android:orientation="horizontal"
		android:padding="@dimen/d_mar_normal_10dp" />

	<View
		android:id="@+id/view_green"
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_alignParentBottom="true"
		android:background="@color/c_green_switch"></View>

	<affinity.com.srisabaries.customviews.AppTutorialViewPager
		android:id="@+id/vp_app_tutorial"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/view_green">

	</affinity.com.srisabaries.customviews.AppTutorialViewPager>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/d_mar_normal_10dp"
		android:gravity="center_horizontal">

		<ImageView
			android:id="@+id/iv_prev_row"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="10dp"
			android:scaleX="-1"
			android:src="@drawable/next_arrow" />

		<ImageView
			android:id="@+id/iv_next_row"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/next_arrow" />
	</LinearLayout>


</RelativeLayout>
