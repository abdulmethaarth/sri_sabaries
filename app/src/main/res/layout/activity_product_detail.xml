							android:layout_marginTop="0dp"
							android:paddingBottom="@dimen/d_mar_small_5dp"
							android:paddingLeft="@dimen/dp10"
							android:paddingRight="@dimen/d_mar_small_5dp"
							android:paddingTop="@dimen/d_mar_small_5dp" />

					</LinearLayout>

